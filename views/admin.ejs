

    <section id="admin-panel">
        <h2>Admin</h2>
        <a href="/add_post">Ajouter un article</a>
        
        <table class="standard-table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>article</th>
                <th>Auteur</th>
                <th>Cat√©gorie</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(element => { %>
             <tr>
                 <td> <%= element.Title %>  </td>
                 <td> <%= element.Contents.substring(0, 30)+"..." %>  </td>
                 <td> <%= element.FirstName+" "+element.LastName %>  </td>
